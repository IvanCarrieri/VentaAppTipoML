@model SistemaInventario.Modelos.EmpresaVM
@{
    ViewData["Title"] = "Upsert";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">
    <div class="container" style="padding-bottom:0.5rem;">
        <div class="row p-1 border-0">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </div>

        @if (Model.Empresa.Id != 0)
        {
            <input type="hidden" asp-for="Empresa.Id" />
        }
        

        <div class="col-12 border-bottom p-1">
            <h2 class="text-primary">Empresa<i class="fas fa-user-tie"></i></h2>
        </div>

        <div class="form-group mb-2" style="padding-top:14px;">
            <label>Nombre</label>
            <input type="text" asp-for="Empresa.Nombre" class="form-control" placeholder="Nombre" />
            <span asp-validation-for="Empresa.Nombre" class="text-danger"></span>
        </div>


        <div class="form-group mb-2" style="padding-top:14px;">
            <label>Descripcion</label>
            <textarea type="text" asp-for="Empresa.Descripcion" class="form-control" placeholder="Descripcion" rows=2></textarea>
            <span asp-validation-for="Empresa.Descripcion" class="text-danger"></span>
        </div>

        <div class="row mb-2">
            <div class="form-group col-md-4">
                <label>País</label>
                <input type="text" asp-for="Empresa.Pais" class="form-control" placeholder="País" />
                <span asp-validation-for="Empresa.Pais" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label>Ciudad</label>
                <input type="text" asp-for="Empresa.Ciudad" class="form-control" placeholder="Ciudad" />
                <span asp-validation-for="Empresa.Ciudad" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group mb-2">
            <label>Dirección</label>
            <input type="text" asp-for="Empresa.Direccion" class="form-control" placeholder="Dirección" />
            <span asp-validation-for="Empresa.Direccion" class="text-danger"></span>
        </div>

        <div class="row mb-2">
            <div class="form-group col-md-6">
                <label>Teléfono</label>
                <input type="text" asp-for="Empresa.Telefono" class="form-control" placeholder="Teléfono" />
                <span asp-validation-for="Empresa.Telefono" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label>Depósito de Venta</label>
                <select asp-for="Empresa.DepositoVentaId" asp-items="@Model.DepositoLista" class="form-select">
                    <option value="">Seleccione un Depósito</option>
                </select>
                <span asp-validation-for="Empresa.DepositoVentaId" class="text-danger"></span>
            </div>

        </div>

        <br />

        <div class="d-grid gap-2 d-md-block">
            <button type="submit" class="btn btn-primary"><i class="fas fa-plus"></i> Grabar</button>
        </div>

    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}


