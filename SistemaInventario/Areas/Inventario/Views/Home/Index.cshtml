@model IEnumerable<SistemaInventario.Modelos.Producto>
@using SistemaInventario.Utilidades

@{
    ViewData["Title"] = "Home Page";
}


 <header class="header2 bg-dark text-white py-5">
        <div class="container text-center">
            <h1 class="display-4">Bienvenidos a nuestra tienda</h1>
            <p class="lead">Los mejores productos los encontrarás aquí.</p>
        </div>
 </header>

<br />

<section class="my-5">

    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="input-group mb-3">
                <input id="search" type="text" class="form-control" value="@ViewBag.Busqueda" placeholder="Buscar producto" aria-label="Buscar" aria-describedby="button-addon2">
                <button class="btn btn-primary" onclick="buscar()">
                    <i class="bi bi-search"></i> Buscar
                </button>
            </div>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-3 row-cols-lg-5 g-4" style="margin-left: 15px; margin-right: 15px;">
        @foreach (var producto in ViewBag.Productos)
        {
            <div class="col">
                <div class="card h-100 shadow">
                    <img src="@DS.ImagenRuta@producto.ImagenUrl" class="card-img-top" alt="@producto.Descripcion">
                    <div class="card-body">
                        <h5 class="card-title">@producto.Descripcion</h5>
                        <p class="card-text">$ @producto.Precio.ToString("N2")</p>
                    </div>
                    <div class="card-footer">
                        <a asp-action="Detalle" asp-route-id="@producto.Id" class="btn btn-outline-primary w-100">
                            <i class="bi bi-ticket-detailed"></i> Detalle
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    

    <div class="row" style="margin-left: 150px; margin-right: 150px;">
        <nav aria-label="Page navigation" class="mt-5">
            <ul class="pagination justify-content-center">

                <li class="page-item @(ViewBag.Pagina == 1 ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { pagina = ViewBag.Pagina - 1 })">Anterior</a>
                </li>

                @for (int i = 1; i <= ViewBag.TotalPaginas; i++)
                {
                    <li class="page-item @(i == ViewBag.Pagina ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { pagina = i })">@i</a>
                    </li>
                }

                <li class="page-item @(ViewBag.Pagina == ViewBag.TotalPaginas ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { pagina = ViewBag.Pagina + 1 })">Siguiente</a>
                </li>
            </ul>
        </nav>
    </div>

</section>

<script>
    function buscar() {
        var busqueda = document.getElementById("search").value;
        window.location.href = "@Url.Action("Index")?pagina=" + @ViewBag.Pagina + "&busqueda=" + busqueda;
    }
</script>


 